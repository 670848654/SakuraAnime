<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 我收藏的番剧 -->
    <shortcut
        android:shortcutId="favorite"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_favorite"
        android:shortcutShortLabel="@string/favoriteShortName"
        android:shortcutLongLabel="@string/favoriteLongName"
        android:shortcutDisabledMessage="@string/disableMsg">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="my.project.sakuraproject"
            android:targetClass="my.project.sakuraproject.main.favorite.FavoriteActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
    <!-- 动漫分类 -->
    <shortcut
        android:shortcutId="tag"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_dashboard"
        android:shortcutShortLabel="@string/tagShortName"
        android:shortcutLongLabel="@string/tagLongName"
        android:shortcutDisabledMessage="@string/disableMsg">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="my.project.sakuraproject"
            android:targetClass="my.project.sakuraproject.main.tag.TagActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
    <!-- 搜索动漫 -->
    <shortcut
        android:shortcutId="search"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_search"
        android:shortcutShortLabel="@string/searchShortName"
        android:shortcutLongLabel="@string/searchLongName"
        android:shortcutDisabledMessage="@string/disableMsg">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="my.project.sakuraproject"
            android:targetClass="my.project.sakuraproject.main.search.SearchActivity" />
        <categories android:name="android.shortcut.conversation"/>
    </shortcut>
</shortcuts>